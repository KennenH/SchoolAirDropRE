<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smartRefreshLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srlEnableOverScrollDrag="true"
    app:srlEnablePreviewInEditMode="false"
    app:srlFooterMaxDragRate="1.2"
    app:srlHeaderMaxDragRate="1.2"
    app:srlHeaderTriggerRate="10"
    tools:context=".fragment.my.MyFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/general_padding_larger"
                android:paddingTop="45dp"
                android:paddingEnd="@dimen/general_padding_bit_larger"
                android:paddingBottom="@dimen/general_padding_large"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.05" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/my_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/avatar"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline7"
                    app:placeholderImage="@drawable/logo"
                    app:roundedCornerRadius="@dimen/general_padding" />

                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/general_padding"
                    android:layout_marginEnd="@dimen/general_padding"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:padding="@dimen/general_padding"
                    android:text="@string/login"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/my_avatar"
                    app:layout_constraintEnd_toStartOf="@+id/imageView"
                    app:layout_constraintStart_toEndOf="@+id/my_avatar"
                    app:layout_constraintTop_toTopOf="@+id/my_avatar" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/personalInfo"
                    android:src="@drawable/right_black"
                    app:layout_constraintBottom_toBottomOf="@+id/my_avatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/my_avatar" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.example.schoolairdroprefactoredition.ui.components.SSBInfo
                android:id="@+id/my_bought_sold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/my_info" />

            <com.example.schoolairdroprefactoredition.ui.components.PageItem
                android:id="@+id/my_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_padding_large"
                app:PI_icon="@drawable/ic_price"
                app:PI_title="@string/quote"
                app:layout_constraintTop_toBottomOf="@+id/my_bought_sold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="50dp"
                android:background="@color/colorLine"
                app:layout_constraintBottom_toBottomOf="@+id/my_quote"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.example.schoolairdroprefactoredition.ui.components.PageItem
                android:id="@+id/my_onGoing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:PI_arrow="@drawable/right_black"
                app:PI_icon="@drawable/later_blue"
                app:PI_title="@string/onGoing"
                app:layout_constraintTop_toBottomOf="@+id/my_quote" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="50dp"
                android:background="@color/colorLine"
                app:layout_constraintBottom_toBottomOf="@+id/my_onGoing"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.example.schoolairdroprefactoredition.ui.components.PageItem
                android:id="@+id/my_trash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:PI_arrow="@drawable/right_black"
                app:PI_icon="@drawable/ic_trash"
                app:PI_title="@string/trash"
                app:layout_constraintTop_toBottomOf="@+id/my_onGoing" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="50dp"
                android:background="@color/colorLine"
                app:layout_constraintBottom_toBottomOf="@+id/my_trash"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.example.schoolairdroprefactoredition.ui.components.PageItem
                android:id="@+id/my_likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:PI_arrow="@drawable/right_black"
                app:PI_icon="@drawable/favorite_red"
                app:PI_title="@string/likes"
                app:layout_constraintTop_toBottomOf="@+id/my_trash" />

            <com.example.schoolairdroprefactoredition.ui.components.PageItem
                android:id="@+id/my_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_padding_large"
                app:PI_arrow="@drawable/right_black"
                app:PI_icon="@drawable/settings_black"
                app:PI_title="@string/setting"
                app:layout_constraintTop_toBottomOf="@+id/my_likes" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
