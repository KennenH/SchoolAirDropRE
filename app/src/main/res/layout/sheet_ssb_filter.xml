<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_first"
        android:gravity="center"
        android:padding="@dimen/general_padding_bit_larger"
        android:text="@string/sortBy"
        android:textSize="@dimen/textSizeMin"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/s0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheet_gap"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/female"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_white"
        android:gravity="center"
        android:padding="@dimen/general_padding_bit_larger"
        android:text="@string/filterTimeAsc"
        android:textColor="@color/black"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintTop_toBottomOf="@id/s0" />

    <View
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheet_gap"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@+id/female" />

    <TextView
        android:id="@+id/male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_white"
        android:gravity="center"
        android:padding="@dimen/general_padding_bit_larger"
        android:text="@string/filterTimeDesc"
        android:textColor="@color/black"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintTop_toBottomOf="@+id/s1" />

    <View
        android:id="@+id/s2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheet_gap"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@+id/male" />

    <TextView
        android:id="@+id/hermaphrodite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_white"
        android:gravity="center"
        android:padding="@dimen/general_padding_bit_larger"
        android:text="@string/filterWatches"
        android:textColor="@color/black"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintTop_toBottomOf="@+id/s2" />

    <View
        android:id="@+id/gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_padding_large"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/hermaphrodite" />

    <TextView
        android:id="@+id/cancel"
        style="@style/SheetCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_white"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/black"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gap"
        app:layout_goneMarginTop="@dimen/general_padding_large" />

</androidx.constraintlayout.widget.ConstraintLayout>