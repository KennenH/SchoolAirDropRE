<?xml version="1.0" encoding="utf-8"?>
<com.example.schoolairdroprefactoredition.ui.auto.ConstrainLayoutAuto xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/general_padding_bit_larger">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_page_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="@dimen/general_padding_tiny" />

    <TextView
        android:id="@+id/item_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_padding_large"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintBottom_toBottomOf="@+id/item_page_icon"
        app:layout_constraintStart_toEndOf="@+id/item_page_icon"
        app:layout_constraintTop_toTopOf="@+id/item_page_icon"
        tools:text="@string/likes" />

    <TextView
        android:id="@+id/item_page_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_padding"
        android:textColor="#888888"
        android:textSize="@dimen/textSizeMin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/item_page_name"
        app:layout_constraintTop_toBottomOf="@+id/item_page_name"
        tools:text="查看我的收藏查看我的收藏查看我的收藏" />

    <ImageView
        android:id="@+id/item_page_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/right_black"
        app:layout_constraintBottom_toBottomOf="@+id/item_page_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_page_icon" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/item_page_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/item_page_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_page_icon" />

    <CheckBox
        android:id="@+id/item_page_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/item_page_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_page_icon" />

</com.example.schoolairdroprefactoredition.ui.auto.ConstrainLayoutAuto>