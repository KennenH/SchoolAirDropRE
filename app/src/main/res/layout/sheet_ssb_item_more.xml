<?xml version="1.0" encoding="utf-8"?>
<com.example.schoolairdroprefactoredition.ui.auto.ConstraintLayoutAuto xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/modify"
        style="@style/SheetNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_first"
        android:gravity="center"
        android:text="@string/modifyInfo"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/s2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheet_gap"
        android:background="@color/colorLine"
        app:layout_constraintTop_toBottomOf="@+id/modify" />

    <TextView
        android:id="@+id/off_shelf"
        style="@style/SheetNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_white"
        android:gravity="center"
        android:text="@string/offShelf"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintTop_toBottomOf="@+id/s2" />

    <View
        android:id="@+id/gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_padding_large"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/off_shelf" />

    <TextView
        android:id="@+id/cancel"
        style="@style/SheetCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_white"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/black"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gap"
        app:layout_goneMarginTop="@dimen/general_padding_large" />

</com.example.schoolairdroprefactoredition.ui.auto.ConstraintLayoutAuto>