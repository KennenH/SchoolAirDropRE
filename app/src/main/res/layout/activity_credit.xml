<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scene.credit.CreditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/credit_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorCreditGoodDark"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/credit_num"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="75dp"
                    android:contentDescription="@string/credits"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_4"
                    app:layout_constraintBottom_toTopOf="@id/credit_level"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/credit_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_rounded_credit_good"
                    android:padding="@dimen/general_padding_tiny"
                    android:text="@string/creditGreat"
                    android:textColor="@color/colorCreditGoodDark"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toTopOf="@id/credit_tip"
                    app:layout_constraintEnd_toEndOf="@+id/credit_num"
                    app:layout_constraintStart_toStartOf="@+id/credit_num"
                    app:layout_constraintTop_toBottomOf="@+id/credit_num" />

                <TextView
                    android:id="@+id/credit_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/general_padding"
                    android:layout_marginBottom="@dimen/general_padding_bit_larger"
                    android:drawablePadding="@dimen/general_padding_small"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="@dimen/general_padding_small"
                    android:text="近期信用上涨 请继续保持"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSizeMin"
                    app:drawableStartCompat="@drawable/ic_attention_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/credit_level" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.example.schoolairdroprefactoredition.ui.auto.OverDragLayout
        android:id="@+id/credit_recycler_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_credit_good"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/credit_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:listitem="@layout/item_credit_assessment" />
        </androidx.core.widget.NestedScrollView>
    </com.example.schoolairdroprefactoredition.ui.auto.OverDragLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/transparent"
        app:navigationIcon="@drawable/ic_left_white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>