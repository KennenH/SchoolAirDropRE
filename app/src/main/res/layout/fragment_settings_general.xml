<?xml version="1.0" encoding="utf-8"?>
<com.example.schoolairdroprefactoredition.utils.OverDragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/general_padding_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.schoolairdroprefactoredition.ui.components.PageItem
            android:id="@+id/settings_general_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/language" />

        <com.example.schoolairdroprefactoredition.ui.components.PageItem
            android:id="@+id/settings_general_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_padding_large"
            app:title="@string/storage" />
    </LinearLayout>
</com.example.schoolairdroprefactoredition.utils.OverDragLayout>