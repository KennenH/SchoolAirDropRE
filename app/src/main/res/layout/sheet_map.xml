<?xml version="1.0" encoding="utf-8"?>
<com.example.schoolairdroprefactoredition.ui.auto.ConstrainLayoutAuto xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:background="@drawable/sheet_first">

    <LinearLayout
        android:id="@+id/sheet_map_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_padding_bit_larger"
        android:layout_marginEnd="@dimen/general_padding_bit_larger"
        android:gravity="center"
        android:padding="@dimen/general_padding_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="@drawable/sheet_action_header" />
    </LinearLayout>

    <TextView
        android:id="@+id/sheet_map_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_padding_bit_larger"
        android:layout_marginTop="@dimen/general_padding"
        android:layout_marginEnd="@dimen/general_padding_bit_larger"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:text="杭州市下沙江干区学源街258号中国计量大学西校区生活区"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_map_header" />

    <TextView
        android:id="@+id/sheet_map_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_padding_bit_larger"
        android:layout_marginBottom="@dimen/general_padding_bit_larger"
        android:background="@drawable/price_button"
        android:drawableStart="@drawable/done_white"
        android:paddingStart="@dimen/general_padding_even_larger"
        android:paddingTop="@dimen/general_padding_tiny"
        android:paddingEnd="@dimen/general_padding_even_larger"
        android:paddingBottom="@dimen/general_padding_tiny"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_map_position" />

</com.example.schoolairdroprefactoredition.ui.auto.ConstrainLayoutAuto>