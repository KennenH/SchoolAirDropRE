<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/home_item_image"
        android:layout_height="@dimen/home_item_image"
        android:contentDescription="@string/add"
        app:actualImageResource="@drawable/bg_add_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/placeholder_rounded"
        app:placeholderImageScaleType="centerCrop"
        app:roundedCornerRadius="@dimen/general_padding" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/general_padding_larger"
        android:layout_height="@dimen/general_padding_larger"
        android:src="@drawable/button_close_fill"
        app:layout_constraintBottom_toTopOf="@+id/image"
        app:layout_constraintEnd_toEndOf="@+id/image"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="@+id/image" />

</androidx.constraintlayout.widget.ConstraintLayout>