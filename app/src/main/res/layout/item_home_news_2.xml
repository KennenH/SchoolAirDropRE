<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/general_padding_tiny"
    app:cardCornerRadius="@dimen/general_padding_large">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryPink"
        android:drawableTop="@drawable/ic_chart"
        android:drawablePadding="@dimen/general_padding"
        android:gravity="center"
        android:padding="@dimen/general_padding_large"
        android:text="快速上手"
        android:textColor="@color/white"
        android:textSize="18dp" />

</androidx.cardview.widget.CardView>