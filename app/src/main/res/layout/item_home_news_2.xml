<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:hl_cornerRadius="@dimen/general_padding_large"
    app:hl_shadowColor="@color/blackShadow"
    app:hl_shadowLimit="@dimen/general_padding">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorPrimaryPink"
        android:background="@drawable/bg_rounded_white"
        android:drawablePadding="@dimen/general_padding"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="@dimen/general_padding_large"
        android:text="快速上手"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:drawableTopCompat="@drawable/ic_chart" />

</com.lihang.ShadowLayout>