<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/general_padding"
    app:cardElevation="1dp">

    <com.example.schoolairdroprefactoredition.ui.auto.ConstrainLayoutAuto
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/toolbar_icon"
            android:layout_height="@dimen/toolbar_icon"
            android:layout_marginStart="@dimen/general_padding_large"
            android:layout_marginTop="@dimen/general_padding_large"
            android:contentDescription="@string/avatar"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@drawable/user_3x"
            app:roundedCornerRadius="@dimen/general_padding_small" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_padding_large"
            android:layout_marginEnd="@dimen/general_padding_large"
            android:ellipsize="end"
            android:lines="1"
            android:text="测试用户0"
            android:textSize="@dimen/textSizeNormal"
            app:layout_constraintBottom_toBottomOf="@+id/user_avatar"
            app:layout_constraintEnd_toStartOf="@+id/status"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            app:layout_constraintTop_toTopOf="@+id/user_avatar" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/general_padding_large"
            android:text="@string/pending"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/user_name"
            app:layout_constraintEnd_toEndOf="@+id/handle_waiting"
            app:layout_constraintTop_toTopOf="@+id/user_name" />

        <TextView
            android:id="@+id/handle_waiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/general_padding"
            android:text="@string/pending"
            android:textSize="@dimen/textSizeNormal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/user_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/user_avatar" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:background="@color/primary"
            app:layout_constraintEnd_toEndOf="@+id/status"
            app:layout_constraintStart_toStartOf="@+id/user_avatar"
            app:layout_constraintTop_toTopOf="@id/detail" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/general_padding_large"
            android:background="@drawable/button_sheet_white"
            app:layout_constraintTop_toBottomOf="@+id/user_avatar">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/goods_avatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="@dimen/general_padding_large"
                android:layout_marginTop="@dimen/general_padding_large"
                android:layout_marginBottom="@dimen/general_padding_large"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:placeholderImage="@drawable/logo_placeholder"
                app:roundedCornerRadius="@dimen/general_padding_small" />

            <TextView
                android:id="@+id/goods_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/general_padding_large"
                android:layout_marginBottom="@dimen/general_padding"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="拼夕夕正品 iPhone20骨折出"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeLarge"
                app:layout_constraintBottom_toTopOf="@+id/goods_origin_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/goods_avatar"
                app:layout_constraintTop_toTopOf="@+id/goods_avatar" />

            <TextView
                android:id="@+id/goods_origin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$109.0"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSizeNormal"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/goods_avatar"
                app:layout_constraintStart_toStartOf="@+id/goods_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:background="@color/primary"
            app:layout_constraintEnd_toEndOf="@+id/status"
            app:layout_constraintStart_toStartOf="@+id/user_avatar"
            app:layout_constraintTop_toBottomOf="@id/detail" />

        <TextView
            android:id="@+id/quote_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_padding_large"
            android:layout_marginTop="@dimen/general_padding"
            android:text="@string/quote"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeNormal"
            app:layout_constraintBaseline_toBaselineOf="@id/quote_price"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/quote_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_padding_large"
            android:layout_marginTop="@dimen/general_padding_bit_larger"
            android:layout_marginEnd="@dimen/general_padding_large"
            android:layout_marginBottom="@dimen/general_padding_bit_larger"
            android:autoSizeMaxTextSize="@dimen/textSizeLarge"
            android:text="$1024.0"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSizeLarge"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/quote_text"
            app:layout_constraintTop_toBottomOf="@id/detail" />

        <TextView
            android:id="@+id/quote_refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/general_padding_large"
            android:background="@drawable/bg_round_stroke_primary"
            android:paddingStart="@dimen/general_padding_bit_larger"
            android:paddingTop="@dimen/general_padding_small"
            android:paddingEnd="@dimen/general_padding_bit_larger"
            android:paddingBottom="@dimen/general_padding_small"
            android:text="@string/refuse"
            android:textSize="@dimen/textSizeNormal"
            app:layout_constraintBottom_toBottomOf="@+id/quote_price"
            app:layout_constraintEnd_toStartOf="@+id/quote_confirm"
            app:layout_constraintTop_toTopOf="@+id/quote_price" />

        <TextView
            android:id="@+id/quote_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/general_padding_large"
            android:background="@drawable/bg_round_theme"
            android:paddingStart="@dimen/general_padding_bit_larger"
            android:paddingTop="@dimen/general_padding_small"
            android:paddingEnd="@dimen/general_padding_bit_larger"
            android:paddingBottom="@dimen/general_padding_small"
            android:text="@string/accept"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeNormal"
            app:layout_constraintBottom_toBottomOf="@+id/quote_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/quote_price" />

    </com.example.schoolairdroprefactoredition.ui.auto.ConstrainLayoutAuto>
</androidx.cardview.widget.CardView>