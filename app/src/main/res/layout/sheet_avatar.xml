<?xml version="1.0" encoding="utf-8"?>
<com.example.schoolairdroprefactoredition.ui.auto.ConstraintLayoutAuto xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/take_photo"
        style="@style/SheetNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_first"
        android:gravity="center"
        android:text="@string/takePhoto"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine"
        app:layout_constraintTop_toBottomOf="@+id/take_photo" />

    <TextView
        android:id="@+id/select_from_album"
        style="@style/SheetNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_white"
        android:gravity="center"
        android:text="@string/selectFromAlbum"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintTop_toBottomOf="@+id/s1" />

    <View
        android:id="@+id/s2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine"
        app:layout_constraintTop_toBottomOf="@+id/select_from_album" />

    <TextView
        android:id="@+id/save_to_album"
        style="@style/SheetNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_white"
        android:gravity="center"
        android:text="@string/saveToAlbum"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintTop_toBottomOf="@+id/s2" />

    <View
        android:id="@+id/gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_padding_large"
        android:background="@color/colorLine"
        app:layout_constraintTop_toBottomOf="@id/save_to_album" />

    <TextView
        android:id="@+id/cancel"
        style="@style/SheetCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_sheet_white"
        android:gravity="center"
        android:text="@string/cancel"
        android:textSize="@dimen/textSizeNormal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gap" />

</com.example.schoolairdroprefactoredition.ui.auto.ConstraintLayoutAuto>