<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/general_padding_bit_larger"
    android:paddingTop="@dimen/general_padding_bit_larger"
    android:paddingEnd="@dimen/general_padding_bit_larger"
    android:paddingBottom="96dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        tools:text="哈哈哈哈哈哈哈哈哈哈哈哈 三全食品"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/goods_tags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_padding"
        app:flexWrap="wrap"
        app:layout_constraintEnd_toEndOf="@+id/goods_name"
        app:layout_constraintStart_toStartOf="@+id/goods_name"
        app:layout_constraintTop_toBottomOf="@+id/goods_name">

    </com.google.android.flexbox.FlexboxLayout>

    <com.example.schoolairdroprefactoredition.ui.components.GoodsPopularity
        android:id="@+id/goods_popularity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/goods_price"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/goods_price" />

    <com.example.schoolairdroprefactoredition.ui.components.GoodsPrice
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goods_tags" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:layout_marginTop="@dimen/general_padding_larger"
        android:background="@color/colorLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/goods_price" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/goods_avatar"
        android:layout_width="@dimen/toolbar_icon_even_larger"
        android:layout_height="@dimen/toolbar_icon_even_larger"
        android:layout_marginStart="@dimen/general_padding"
        android:layout_marginTop="@dimen/general_padding_larger"
        android:scaleType="centerCrop"
        android:src="@drawable/brvah_sample_footer_loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:placeholderImage="@drawable/logo_placeholder"
        app:placeholderImageScaleType="centerInside"
        app:roundedCornerRadius="@dimen/general_rounded_rect" />

    <TextView
        android:id="@+id/goods_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_padding_large"
        tools:text="李伟"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/goods_avatar"
        app:layout_constraintStart_toEndOf="@+id/goods_avatar"
        app:layout_constraintTop_toTopOf="@+id/goods_avatar" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:layout_marginTop="@dimen/general_padding_larger"
        android:background="@color/colorLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/goods_avatar" />

    <TextView
        android:id="@+id/goods_description_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_padding_large"
        android:gravity="center"
        android:paddingBottom="@dimen/general_padding_large"
        android:text="@string/goods_description"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/goods_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recycler_header"
        android:padding="@dimen/general_padding"
        tools:text="出售二手烟，拍下即面对面交货，无需动嘴，无需打火机，只需闭上双眼，深吸一口气，即可享受到中华二手烟的雄浑烤烟气息，荡气回肠，心动不如行动"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/goods_description_header" />


</androidx.constraintlayout.widget.ConstraintLayout>