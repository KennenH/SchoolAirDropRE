<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_item"
    android:paddingStart="@dimen/general_padding"
    android:paddingTop="4dp"
    android:paddingEnd="@dimen/general_padding"
    android:paddingBottom="4dp"
    android:tag="@string/tag_recycler_item">

    <com.shehuan.niv.NiceImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/y65"
        android:layout_height="@dimen/y65"
        android:scaleType="centerCrop"
        android:src="@drawable/brain"
        app:corner_radius="@dimen/general_rounded_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_padding"
        android:drawableStart="@drawable/ic_negotiable"
        android:drawablePadding="@dimen/general_padding"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="李伟脑子 倒贴 价格可面议"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_image"
        app:layout_constraintTop_toTopOf="@+id/item_image"
        tools:ignore="SpUsage" />

    <com.example.schoolairdroprefactoredition.ui.components.GoodsPrice
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_padding"
        app:layout_constraintStart_toStartOf="@+id/item_title"
        app:layout_constraintTop_toBottomOf="@+id/item_title" />

    <TextView
        android:id="@+id/item_watched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_padding"
        android:text="1.2k人看过"
        app:layout_constraintBottom_toBottomOf="@+id/item_price"
        app:layout_constraintStart_toEndOf="@id/item_price"
        app:layout_constraintTop_toTopOf="@+id/item_price" />

    <TextView
        android:id="@+id/item_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校园空投官方"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/item_price"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_credit5"
        app:layout_constraintBottom_toBottomOf="@+id/item_image"
        app:layout_constraintEnd_toEndOf="@+id/item_title" />
</androidx.constraintlayout.widget.ConstraintLayout>