<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_comments_icon"
        android:layout_width="@dimen/toolbar_icon"
        android:layout_height="@dimen/toolbar_icon"
        android:src="@drawable/chat_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_padding"
        android:text="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_likes"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/item_comments_icon"
        app:layout_constraintTop_toTopOf="@+id/item_comments_icon" />

    <ImageView
        android:id="@+id/item_likes_icon"
        android:layout_width="@dimen/toolbar_icon"
        android:layout_height="@dimen/toolbar_icon"
        android:layout_marginEnd="@dimen/general_padding"
        android:src="@drawable/baseline_favorite_black_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_likes"
        app:layout_constraintTop_toTopOf="@+id/item_comments_icon" />

    <TextView
        android:id="@+id/item_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_watches"
        app:layout_constraintStart_toEndOf="@+id/item_comments"
        app:layout_constraintTop_toTopOf="@+id/item_likes_icon" />

    <ImageView
        android:id="@+id/item_watches_icon"
        android:layout_width="@dimen/toolbar_icon"
        android:layout_height="@dimen/toolbar_icon"
        android:layout_marginEnd="@dimen/general_padding"
        android:src="@drawable/baseline_remove_red_eye_black_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_watches"
        app:layout_constraintTop_toTopOf="@+id/item_likes_icon" />

    <TextView
        android:id="@+id/item_watches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general_padding"
        android:text="23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_likes"
        app:layout_constraintTop_toTopOf="@+id/item_watches_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>