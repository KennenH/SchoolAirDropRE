<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/sheet_modify_sex_male"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/sheet_button_first"
        android:gravity="center"
        android:text="男"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primaryDark"
        app:layout_constraintBottom_toTopOf="@id/sheet_modify_sex_female"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_modify_sex_male" />

    <TextView
        android:id="@+id/sheet_modify_sex_female"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/sheet_button_white"
        android:gravity="center"
        android:text="女"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/decoration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <View
        android:id="@+id/decoration"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/primaryDark"
        app:layout_constraintBottom_toTopOf="@id/sheet_modify_sex_cancel"
        app:layout_constraintTop_toBottomOf="@id/sheet_modify_sex_female" />

    <TextView
        android:id="@+id/sheet_modify_sex_cancel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/sheet_button_white"
        android:gravity="center"
        android:text="取消"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/decoration" />

</androidx.constraintlayout.widget.ConstraintLayout>