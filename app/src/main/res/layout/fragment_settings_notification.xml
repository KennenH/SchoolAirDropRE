<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/general_padding_large"
    app:srlEnableOverScrollDrag="true"
    app:srlEnableRefresh="false"
    app:srlFooterMaxDragRate="1.2"
    app:srlHeaderMaxDragRate="1.2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.schoolairdroprefactoredition.ui.components.PageItem
            android:id="@+id/settings_notification_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isSwitch="true"
            app:title="@string/receiveNewMessages" />

        <com.example.schoolairdroprefactoredition.ui.components.PageItem
            android:id="@+id/settings_notification_in_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isSwitch="true"
            app:title="@string/receiveInAppMessages" />

        <com.example.schoolairdroprefactoredition.ui.components.PageItem
            android:id="@+id/settings_notification_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_padding_large"
            app:isSwitch="true"
            app:title="@string/vibrate" />

        <com.example.schoolairdroprefactoredition.ui.components.PageItem
            android:id="@+id/settings_notification_sounds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isSwitch="true"
            app:title="@string/sounds" />

    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>