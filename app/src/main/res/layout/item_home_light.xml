<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_item"
    android:tag="@string/tag_recycler_item">

    <com.shehuan.niv.NiceImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/y65"
        android:layout_height="@dimen/y65"
        android:scaleType="centerCrop"
        android:src="@drawable/brain"
        app:corner_radius="@dimen/general_rounded_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_padding"
        android:layout_marginEnd="@dimen/general_padding"
        android:ellipsize="end"
        android:lines="2"
        android:text="李伟脑子 倒贴 价格可面议"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_image"
        app:layout_constraintTop_toTopOf="@+id/item_image"
        tools:ignore="SpUsage" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/item_tags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_padding"
        android:layout_marginEnd="@dimen/general_padding"
        app:flexWrap="wrap"
        app:layout_constraintBottom_toTopOf="@+id/item_popularity"
        app:layout_constraintEnd_toStartOf="@+id/item_price"
        app:layout_constraintStart_toEndOf="@+id/item_image"
        app:layout_constraintTop_toBottomOf="@+id/item_title">


    </com.google.android.flexbox.FlexboxLayout>

    <com.example.schoolairdroprefactoredition.ui.components.GoodsPrice
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general_padding_large"
        app:layout_constraintBottom_toTopOf="@+id/item_popularity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_title" />

    <com.example.schoolairdroprefactoredition.ui.components.GoodsPopularity
        android:id="@+id/item_popularity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_price"
        app:layout_constraintStart_toStartOf="@+id/item_title" />

</androidx.constraintlayout.widget.ConstraintLayout>