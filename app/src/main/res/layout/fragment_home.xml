<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.home.HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/home_tap_to_top"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.schoolairdroprefactoredition.ui.components.Location
                android:id="@+id/home_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/general_padding"
                android:paddingEnd="@dimen/general_padding"
                app:layout_constraintBottom_toBottomOf="@+id/home_search_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_tap_to_top" />

            <TextView
                android:id="@+id/home_search_bar"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_icon_large"
                android:layout_marginStart="@dimen/general_padding"
                android:layout_marginEnd="16dp"
                android:background="@drawable/home_search_bar"
                android:drawableStart="@drawable/round_search_24"
                android:gravity="center_vertical"
                android:hint="@string/Search"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/home_location"
                app:layout_constraintTop_toBottomOf="@+id/home_tap_to_top"
                tools:ignore="RtlSymmetry" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/home_indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_indicator" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/home_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar"
        app:srlEnableOverScrollDrag="true"
        app:srlFooterMaxDragRate="1.2"
        app:srlHeaderMaxDragRate="1.2"
        app:srlHeaderTriggerRate="0.7">

        <com.example.schoolairdroprefactoredition.utils.refresher.DeliveryHeader
            android:layout_width="match_parent"
            android:layout_height="110dp" />

        <com.example.schoolairdroprefactoredition.fragment.home.HomeRecycler
            android:id="@+id/home_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            tools:listitem="@layout/item_home_light" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
