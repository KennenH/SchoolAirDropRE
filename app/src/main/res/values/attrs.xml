<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="PageItem">
        <attr name="PI_isFirst" format="boolean" />
        <attr name="PI_isLast" format="boolean" />
        <attr name="PI_isIconLarge" format="boolean" />
        <attr name="PI_isSwitch" format="boolean" />
        <attr name="PI_isCheck" format="boolean" />
        <attr name="PI_showArrow" format="boolean" />
        <attr name="PI_icon" format="reference" />
        <attr name="PI_arrow" format="reference" />
        <attr name="PI_title" format="string" />
        <attr name="PI_description" format="string" />
        <attr name="PI_background" format="reference" />
    </declare-styleable>

    <declare-styleable name="OptionItem">
        <attr name="SO_checked" format="boolean" />
        <attr name="SO_title" format="string" />
        <attr name="SO_description" format="string" />
        <attr name="SO_isSwitch" format="boolean" />
        <attr name="SO_isShowArrow" format="boolean" />
        <attr name="SO_hasImage" format="boolean" />
    </declare-styleable>

    <!-- ConstraintContentContainer start-->
    <declare-styleable name="CusContentContainer">
        <attr name="input_view" format="reference" />
        <attr name="hide_by_touch_area" format="reference" />
        <attr name="hide_by_touch_outside_enable" format="boolean" />
    </declare-styleable>
    <!-- ConstraintContentContainer end-->
</resources>
